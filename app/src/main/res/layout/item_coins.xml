<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/defa"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_coins_img_coin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_coin"
        android:layout_marginVertical="8dp"
        android:background="@color/transparente"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_coins_txt_name_coin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Coins"
        app:layout_constraintTop_toTopOf="@id/item_coins_img_coin"
        app:layout_constraintStart_toEndOf="@id/item_coins_img_coin"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_coins_txt_symbol_coin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="BRB"
        app:layout_constraintStart_toStartOf="@id/item_coins_txt_name_coin"
        app:layout_constraintEnd_toEndOf="@id/item_coins_txt_name_coin"
        app:layout_constraintTop_toBottomOf="@id/item_coins_txt_name_coin"
        app:layout_constraintBottom_toBottomOf="@id/item_coins_img_coin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>